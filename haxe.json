{
  "build" : {
    "-D" : ["no-deprecation-warnings"],
    "-cp" : "src/main/haxe", 
    "-lib" : [      
      "stx_pico","stx_nano","stx_om","stx_ds","stx_log","stx_assert","stx_fp","stx_data","stx_asys",
      
      "pml" 
    ],
    "unit" : {
      "--macro" : [
        "include('stx.data',true)",
        "include('stx.assert',true)"
      ],
      "javascript" : {
        "--js" : "build/javascript/unit.js"
      }
    },
    "test"  : {
      "-cp" : "src/test/haxe",
      "-L"  : ["stx_test"]
    }
  }
}